// Grafana Alloy configuration
// Replaces: Promtail, Node Exporter, and cAdvisor

logging {
  level  = "info"
  format = "logfmt"
}

// ====================
// PROMETHEUS METRICS
// ====================

// Scrape own metrics
prometheus.exporter.self "alloy" { }

prometheus.scrape "alloy" {
  targets    = prometheus.exporter.self.alloy.targets
  forward_to = [prometheus.remote_write.default.receiver]
}

// Node Exporter - Host metrics
prometheus.exporter.unix "node" {
  enable_collectors = [
    "cpu",
    "diskstats",
    "filesystem",
    "loadavg",
    "meminfo",
    "netdev",
    "netstat",
    "stat",
    "time",
    "uname",
  ]
}

prometheus.scrape "node" {
  targets    = prometheus.exporter.unix.node.targets
  forward_to = [prometheus.remote_write.default.receiver]
}

// cAdvisor - Container metrics
prometheus.exporter.cadvisor "containers" {
  docker_host = "unix:///var/run/docker.sock"
  store_container_labels = true
  
  // Only monitor Docker containers
  docker_only = true
}

prometheus.scrape "cadvisor" {
  targets    = prometheus.exporter.cadvisor.containers.targets
  forward_to = [prometheus.remote_write.default.receiver]
  
  clustering {
    enabled = false
  }
}

// Scrape application metrics endpoints
prometheus.scrape "services" {
  targets = [
    {
      "__address__" = "auth-service:3001",
      "job"         = "auth-service",
    },
    {
      "__address__" = "video-upload-service:3004",
      "job"         = "video-upload-service",
    },
    {
      "__address__" = "video-metadata-service:3002",
      "job"         = "video-metadata-service",
    },
    {
      "__address__" = "streaming-service:3003",
      "job"         = "streaming-service",
    },
    {
      "__address__" = "thumbnail-generator:8080",
      "job"         = "thumbnail-generator",
    },
  ]
  
  scrape_interval = "15s"
  metrics_path    = "/metrics"
  forward_to      = [prometheus.remote_write.default.receiver]
}

// Send metrics to Prometheus
prometheus.remote_write "default" {
  endpoint {
    url = "http://prometheus:9090/api/v1/write"
  }
}

// ====================
// LOKI LOGS
// ====================

// 1. Discover Docker containers
discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
  
  filter {
    name   = "label"
    values = ["logging=alloy"]
  }
}

// 2. Relabel targets BEFORE scraping
// This converts the temporary __meta labels into permanent labels
discovery.relabel "container_logs" {
  targets = discovery.docker.containers.targets

  // Extract container name (removes the leading slash)
  rule {
    source_labels = ["__meta_docker_container_name"]
    regex         = "/(.*)"
    target_label  = "container"
  }

  // Extract Docker Compose service name
  rule {
    source_labels = ["__meta_docker_container_label_com_docker_compose_service"]
    target_label  = "service"
  }

  // Extract Docker Compose project name
  rule {
    source_labels = ["__meta_docker_container_label_com_docker_compose_project"]
    target_label  = "project"
  }

  // Assign a static job label
  rule {
    target_label = "job"
    replacement  = "docker"
  }
}

// 3. Read container logs using the RELABELED targets
loki.source.docker "containers" {
  host             = "unix:///var/run/docker.sock"
  // NOTICE: We now use the output of the relabel component, not the raw discovery
  targets          = discovery.relabel.container_logs.output
  forward_to       = [loki.write.default.receiver]
  refresh_interval = "5s"
}

// 4. Send logs to Loki
loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}