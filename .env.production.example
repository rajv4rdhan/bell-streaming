# MongoDB Configuration
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/bell-streaming

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name
S3_PRESIGNED_URL_EXPIRATION=900

# External Services
FREEPIK_API_KEY=your-freepik-api-key
WEBHOOK_URL=https://webhook.site/your-unique-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8081

# Video Upload Configuration
ALLOWED_VIDEO_TYPES=video/mp4,video/mpeg,video/quicktime,video/x-msvideo,video/webm,video/x-matroska
MAX_FILE_SIZE_MB=500
